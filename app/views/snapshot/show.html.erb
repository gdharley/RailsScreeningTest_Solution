        <th>Toolkit Name</th>
        <th>Toolkit ID</th>
        <th>Snapshot ID</th>
        <th>Snapshot Name</th>
        <th>Snapshot GUID</th>
    </tr>
    <% @cyclic.each do |snapshot| %>
        <tr>
            <td><%=ProcessApp.find(snapshot.process_app_id).name%></td>
            <td><%=ProcessApp.find(snapshot.process_app_id).id%></td>
            <td><%= snapshot.id %></td>
            <td><%= snapshot.name %></td>
            <td><%= snapshot.guid %></td>
        </tr>
    <% end %>
</table>
<% end %>
